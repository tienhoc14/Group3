	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="../css/sidebar.css">
</head>

<body>
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" class="active">
            <h1><a href="/coordinator/" class="logo">G<div style="margin-top: -60px;" class="footer">
                        <p>reenwich</p>
                    </div></a></h1>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    <a href="/coordinator/"><span class="fa fa-home"></span> Home</a>
                </li>
                <li>
                    <a href="/coordinator/ideas"><span class="fa fa-sticky-note"></span>Ideas</a>
                </li>
                <li>
                    <a href="/coordinator/department"><span class="fa fa-user"></span>Departments</a>
                </li>
            </ul>

            <div class="footer">
                <p>
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script>
                    All rights reserved by University of Greenwich
                </p>
            </div>
        </nav>

		<!-- Page Content  -->
		<div id="content" class="p-4 p-md-5">

			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				<div class="container-fluid">

					<button type="button" id="sidebarCollapse" class="btn btn-primary">
						<i class="fa fa-bars"></i>
						<span class="sr-only">Toggle Menu</span>
					</button>
					<button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
						data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
						<i class="fa fa-bars"></i>
					</button>

					<form action="" method="" class="form-search">
						<input type="text" placeholder="  Search..." name="txtSearch">
					</form>

					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="nav navbar-nav ml-auto">
							<li class="nav-item active">
								<a class="nav-link" href="/coordinator">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">About</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">Profile</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="/logout">Logout</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>

			<div class="container">
				<div class="table-wrapper">
					<div class="table-title">
						<div class="row">
							<div class="col-sm-8">
								<h2>Departments</h2>
							</div>
						</div>
					</div>
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>Name</th>
								<th>Description</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{{#each data}}
							<tr>
								<td>{{name}}</td>
								<td>{{nameStaff}}</td>
								<td>
									<a class="edit" title="Edit" data-toggle="tooltip"
										href="/coordinator/editDepartment?id={{_id}}"><i
											class="material-icons">&#xE254;</i></a>
									<a class="delete" title="Delete" data-toggle="tooltip"
										href="/coordinator/deleteDepartment?id={{_id}}"
										onclick="return confirm('Delete this department?');"><i
											class="material-icons">&#xE872;</i></a>
								</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<script src="js/jquery.min.js"></script>
	<script src="js/popper.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/main.js"></script>
</body>

</html>